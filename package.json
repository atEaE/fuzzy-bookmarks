{
	"name": "fuzzy-bookmarks",
	"displayName": "fuzzy-bookmarks",
	"description": "VSCode extension for managing miscellaneous bookmarks.",
	"version": "0.3.1",
	"publisher": "atEaE",
	"icon": "resources/icon.png",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/atEaE/fuzzy-bookmarks"
	},
	"bugs": {
		"url": "https://github.com/atEaE/fuzzy-bookmarks/issues"
	},
	"keywords": [
		"bookmark",
		"bookmarks",
		"vscode",
		"fuzzy"
	],
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"category": "FzB",
				"title": "Show Bookmarks",
				"command": "fzb.showBookmarks"
			},
			{
				"category": "FzB",
				"title": "Register Bookmarks",
				"command": "fzb.registerBookmarks"
			},
			{
				"category": "FzB",
				"title": "Remove Bookmarks",
				"command": "fzb.removeBookmarks"
			},
			{
				"category": "FzB",
				"title": "Export Bookmarks",
				"command": "fzb.exportBookmarks"
			},
			{
				"category": "FzB",
				"title": "Setup Fuzzy Bookmarks",
				"command": "fzb.setupBookmarks"
			}
		],
		"configuration": [
			{
				"title": "FuzzyBookmarks",
				"properties": {
					"fzb.defaultBookmarkDir": {
						"type": "string",
						"default": "~/.vscode/fzb",
						"description": "Set a directory to save the bookmark."
					},
					"fzb.defaultBookmarkFileName": {
						"type": "string",
						"default": "bookmarks.json",
						"description": "Set a file name to save the bookmark."
					},
					"fzb.directoryOpenType": {
						"type": "string",
						"enum": [
							"terminal",
							"explorer",
							"window"
						],
						"default": "terminal",
						"description": "Set the Open method when Bookmark is selected as the directory type."
					}
				}
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "fzb.registerBookmarks",
					"when": "explorerViewletFocus",
					"group": "FuzzyBookmarks@1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-prettier": "^3.4.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"prettier": "^2.2.1",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	},
	"dependencies": {
		"@types/uuid": "^8.3.0",
		"inversify": "^5.1.1",
		"open": "^8.0.6",
		"reflect-metadata": "^0.1.13",
		"uuid": "^8.3.2"
	}
}